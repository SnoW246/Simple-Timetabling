                        <ComboBoxItem Content="2007"/>
                        <ComboBoxItem Content="2008"/>
                        <ComboBoxItem Content="2009"/>
                        <ComboBoxItem Content="2010"/>
                        <ComboBoxItem Content="2011"/>
                        <ComboBoxItem Content="2012"/>
                        <ComboBoxItem Content="2013"/>
                        <ComboBoxItem Content="2014"/>
                        <ComboBoxItem Content="2015"/>
                        <ComboBoxItem Content="2016"/>
                        <ComboBoxItem Content="2017"/>
                        <ComboBoxItem Content="2018"/>
                    </ComboBox>
                </StackPanel>
            </Border>
            <Border Grid.Row="5" Grid.Column="0" Background="Transparent" CornerRadius="2" Margin="2">
                <TextBlock Text="Username: " 
                   TextAlignment="Right" FontStyle="Italic" FontSize="24" Foreground="Gray" 
                   TextWrapping="WrapWholeWords" IsTextScaleFactorEnabled="True" Margin="2"/>
            </Border>
            <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Background="Transparent" CornerRadius="2" Margin="2">
                <TextBox x:Name="usernameTxt" Margin="2"/>
            </Border>
            
            <Border Grid.Row="6" Grid.Column="0" Background="Transparent" CornerRadius="2" Margin="2">
                <TextBlock Text="Password: " 
                   TextAlignment="Right" FontStyle="Italic" FontSize="24" Foreground="Gray" 
                   TextWrapping="WrapWholeWords" IsTextScaleFactorEnabled="True" Margin="2"/>
            </Border>
            <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Background="Transparent" CornerRadius="2" Margin="2">
                <PasswordBox x:Name="passwordBox" Margin="2" />
            </Border>
            <Border Grid.Row="7" Grid.Column="0" Background="Transparent" CornerRadius="2" Margin="2">
                <TextBlock Text="Confirm password: " 
                   TextAlignment="Right" FontStyle="Italic" FontSize="24" Foreground="Gray" 
                   Margin="2"/>
            </Border>
            <Border Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Background="Transparent" CornerRadius="2" Margin="2">
                <PasswordBox x:Name="passwordConfirmBox" Margin="2" />
            </Border>
            <Border Grid.Row="8" Grid.Column="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" CornerRadius="2" Margin="2">
                <Button VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="Register" VerticalContentAlignment="Center" FontStretch="ExtraExpanded" FontSize="24" UseLayoutRounding="True" Margin="2" FontStyle="Italic" Click="Register_Click"/>
            </Border>
            <Border Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" CornerRadius="2" Margin="2">
                <Button VerticalAlignment="Center" HorizontalAlignment="Stretch" Content="Return" VerticalContentAlignment="Center" FontStretch="ExtraExpanded" FontSize="24" UseLayoutRounding="True" Margin="2" FontStyle="Italic" Click="Return_ClickAsync"/>
            </Border>
        </Grid>
    </Grid>
</Page>
