                                </ComboBox>
                                <ComboBox Grid.Row="5" Grid.Column="1" x:Name="DeleteThisStartTimeMin" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2">
                                    <ComboBoxItem Content="00"/>
